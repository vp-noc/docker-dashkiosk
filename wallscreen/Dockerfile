FROM vpgrp/dashkiosk:latest

RUN cd /opt/dashkiosk && \
    sed s/'col-md-6'/'col-md-3'/g \
        -i /opt/dashkiosk/app/views/groups.html && \
    sed '28i\@container-lg: 2000px;' \
        -i /opt/dashkiosk/app/styles/admin.less && \
    grunt
